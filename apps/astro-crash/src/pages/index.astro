---
import AddUsers from "../components/AddUsers";
import MyInput from "../components/MyInput";
import Showcase from "../components/Showcase.astro";
import UsersList from "../components/UsersList";
import Layout from "../layouts/Layout.astro";
const name = "Moha";
const response = await fetch("https://jsonplaceholder.typicode.com/users?_limit=10");
const users:{[key in string]:string|{}}[] = await response.json();
---
<Layout>
<Showcase showExtra />
<h1 class="text-indigo-400 text-3xl">hello {name}</h1>
<div>
    {users.map(user=><li>{user.name}</li>)}	
<div class="p-16">
    <AddUsers client:visible />
    <UsersList client:visible />
</div>
</div>
</Layout>